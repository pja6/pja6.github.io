---
import BaseLayout from '../layouts/BaseLayout.astro';

import ProfileSideBar from '../components/ProfileSideBar.astro';
import ProfileMain from '../components/ProfileMain.astro';

const title = 'Paul\'s Space';
const description = 'Welcome to Paul\'s Profile and portfolio!';
const permalink = Astro.site.href;
---

<BaseLayout title={title} description={description} permalink={permalink}>
 
  <div class="page-content-container grid grid-cols-1 md:grid-cols-2 gap-4">
    <!-- Sidebar -->
    <div class="sidebar flex mb-4 md:mb-0 w-full md:w-96">
      <ProfileSideBar />
    </div>
    
    <!-- Main Content -->
    <div class="main flex w-full">
      <ProfileMain />
    </div>
  </div>

 </BaseLayout>

 <style>
  .page-content-container {
    padding-left : 10rem;
    padding-right : 20rem;
  }

  .sidebar {
    padding-right: 5rem;

  }
  .main {
    padding-left: 5rem;
  }